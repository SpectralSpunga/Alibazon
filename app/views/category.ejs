<!DOCTYPE html>
<html>
  <head lang="en">
    <title>Home</title>
    <link rel='stylesheet' type='text/css' href='/stylesheets/style.css' />
    <script scr="../controllers/homepageControlles.js"></script>
  </head>
  <body>
      <%- include('./header') %>

      <div id="navbar">
          <a href='#'>Home</a>
          <% links.forEach(function(elem){ %>
            <a href='/category/<%= elem.link %>'><%= elem.ap %></a>
        <% }); %>
      </div>

      <main>
        <h2><%= mainCategory %></h2>
        <p><%= categoryDesc %></p>

        <% mens.forEach(function(elem){ %>
            <h3><%= elem.name %></h3>
            <img src="/images/<%= elem.image %>" alt="<%= elem.id %>">
            <p><%= elem.page_description %></p>

            <% if(mainCategory == "Mens" || mainCategory == 'Womens') {%>
              <a href="/category/<%= mens[1].parent_category_id %>/<%= elem.name.toLowerCase() %>">
                <button>View categories</button>
              </a>
            <% } else {%>
              <a href="/products/<%= elem.id %>">
                <button>View products</button>
              </a>
            <% } %>
            <hr>
        <% }); %>
      </main>

      <footer>Copyright 2020 OSF Digital</footer>
  </body>
</html>