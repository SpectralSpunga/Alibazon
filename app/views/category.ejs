<!DOCTYPE html>
<html>
  <%- include('./head') %>
  <body>
      <%- include('./header') %>
      <%- include('./breadcrumbs') %> 
      <div class="container">
        <main class="category">

          <h1><%= mainCategory %></h1>
          <p><%= description %></p>
  
          <% category.forEach(function(elem){ %>
            <div class="elem">
              <h2><%= elem.name %></h2>
              <img class="img-category" src="/images/<%= elem.image %>" alt="<%= elem.id %>">
              <p><%= elem.page_description %></p>
  
              <% if(mainCategory == "Mens" || mainCategory == 'Womens') {%>
                <a href="/category/<%= category[1].parent_category_id %>/<%= elem.name.toLowerCase() %>">
                  <button>VIEW CATEGORIES</button>
                </a>
              <% } else {%>
                <a href="/products/<%= elem.id %>">
                  <button>VIEW PRODUCTS</button>
                </a>
              <% } %>
            </div>
          <% }); %>
  
        </main>
      </div>
      <%- include('./footer') %>
  </body>
</html>